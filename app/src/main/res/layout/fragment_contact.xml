<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title TextView -->

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="Contact Us"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/contact_us" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Let's Explore with SAMAY the world of flavors together. We're here to assist you in the kitchen! If you have any questions about recipes, cooking tips, techniques, or ingredients, don't hesitate to contact us using any of the platforms below."
            android:textAlignment="center"
            android:textSize="16sp" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_youtube" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_tiktok" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_instagram" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_whatsapp" />

                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingStart="25dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_gmail" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_facebook" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:nestedScrollingEnabled="false"
                    app:cardBackgroundColor="#424040"
                    app:cardCornerRadius="20dp"
                    app:contentPadding="10dp">

                    <ImageView
                        android:id="@+id/socialImageView6"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center|center_horizontal|top|center_vertical"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/contact_twitter" />

                </androidx.cardview.widget.CardView>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
